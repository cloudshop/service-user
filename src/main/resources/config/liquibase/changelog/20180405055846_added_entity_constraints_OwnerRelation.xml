    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity OwnerRelation.
    -->
    <changeSet id="20180405055846-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="owner_type_id"
                                 baseTableName="owner_relation"
                                 constraintName="fk_owner_relation_owner_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="owner_type"/>

        <addForeignKeyConstraint baseColumnNames="owner_id"
                                 baseTableName="owner_relation"
                                 constraintName="fk_owner_relation_owner_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_annex"/>

        <addForeignKeyConstraint baseColumnNames="mercury_id"
                                 baseTableName="owner_relation"
                                 constraintName="fk_owner_relation_mercury_id"
                                 referencedColumnNames="id"
                                 referencedTableName="mercury"/>

    </changeSet>
</databaseChangeLog>
