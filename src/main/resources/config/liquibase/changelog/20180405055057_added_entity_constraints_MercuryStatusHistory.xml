    <!--
        Added the constraints for entity MercuryStatusHistory.
    -->
    <changeSet id="20180405055057-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="mercury_id"
                                 baseTableName="mercury_status_history"
                                 constraintName="fk_mercury_status_history_mercury_id"
